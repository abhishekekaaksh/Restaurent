<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <RelativeLayout
        android:transformPivotY="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:visibility="gone"
            android:id="@+id/prep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_key"
            android:padding="10dp"
            android:text="Preparing"
            android:textColor="@color/white"
            android:textSize="7pt" />


        <TextView
            android:visibility="gone"
            android:id="@+id/arr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/time"
            android:padding="10dp"
            android:text="Arriving In"
            android:textColor="@color/black"
            android:textSize="7pt" />

        <TextView
            android:visibility="gone"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_key"
            android:padding="10dp"
            android:text="10 m"
            android:textColor="@color/white"
            android:textSize="7pt" />

        <TextView
            android:visibility="gone"
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="1006"
            android:textColor="@color/black"
            android:textSize="9pt" />

        <TextView
            android:id="@+id/dishtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order"
            android:layout_margin="5dp"
            android:fontFamily="@font/opensans_bold"
            android:text="abhishek"
            android:textColor="@color/black"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="Rs. 770/-"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/black"
            android:textSize="7pt" />

        <TextView
            android:visibility="gone"
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/amount"
            android:layout_marginTop="5dp"
            android:background="@color/black" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/checkimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_check_circle_black_24dp"
            android:tint="@color/red" />

        <TextView
            android:visibility="gone"
            android:id="@+id/mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/checkimage"
            android:text="@string/mark"
            android:textAllCaps="true"
            android:textColor="@color/black" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/trackimnage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/tdrivewr"
            android:src="@drawable/ic_check_circle_black_24dp"
            android:tint="@color/red" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tdrivewr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:text="@string/trackd"
            android:textAllCaps="true"
            android:textColor="@color/black" />
    </RelativeLayout>

</RelativeLayout>